<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-time-slot-table" author="Kamil Smolarek">
        <createTable tableName="time_slot">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="workshop_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>